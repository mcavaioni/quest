
      
<div class="row">
  <div class='col-xs-12'>
    <%= form_for(@answer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  
      <div class="form-group">
        
        <div class="col-sm-8 col-xs-offset-2">
          <%= f.text_area :content, rows:10, class: "form-control" %>
        </div>
      </div> 
        <div class="form-group">
          <div class="center">
          <%= f.submit "Update answer", class: "btn btn-primary"%>
          </div>
        </div>  
    <%end%>
    <div class="form-group">
          <div class="center">
           [<%= link_to "Cancel request and return to questionnaire", :back %>] 
          </div>
    </div>
  </div>
 </div> 