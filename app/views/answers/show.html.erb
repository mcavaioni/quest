
<h1 align="center"><%= @survey.name %></h1>
  <div class="well">
    <div class="row center">
    <h4 class="center content">List of questions:</h4>
      <div class="col-md-4 col-md-offset-4"> Total: 
        <small><%= pluralize(@survey.questions.count, "question") if @survey.questions %></small>
      </div>
    </div>

  </br>



<% @survey.questions.each do |question| %>
  <div class="panel panel-default parent">
    <div class="panel-heading">
      <h4><%= question.title %></h4>
      <h3 class="panel-title"><%= question.content %></h3>
    </div>
    <div class="panel-body answers-color">
    Answers:
    </div>
      <div class="panel-body">
        <%question.answers.each do |answer| %>
          <div class="form-group">
            <div class="well col-sm-12">
              <%=answer.content%>
              <div>
              <small>Created:
                   <%= time_ago_in_words(answer.created_at) %> ago,
              </small>
              </div>
              <div class="article-actions">
                <%=link_to "Edit this answer", edit_survey_answer_path(id:@survey.id), class: "btn btn-xs btn-primary"%>
                <%=link_to "Delete this answer", survey_answer_path(id:@survey.id), method: :delete, data: {confirm: "Are you sure you want to delete this answer?"}, class: "btn btn-xs btn-danger" %>
              </div>
            </div>
          </div>
        <%end%>
      </div>
  </div>
<%end%>