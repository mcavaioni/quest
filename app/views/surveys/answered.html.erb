<h1 align="center"> Answered questionnaries </h1></br>



<table class="table table-striped table-hover sortable">
  <th>Interviewer Company</th>
  <th>Questionnaire name</th>
  <th>Date sent</th>
  <th>Product name</th>
  <th>Deadline</th>
  <th>Completion date</th>
  
  <% @surveys.each do |survey| %>
          <tr>
          <% if logged_in? %>
            <td><%= survey.user.company.capitalize %></td>
            <td><%= link_to survey.name.capitalize, survey_answer_path(id:survey.id, survey_id: survey.id) %></td>
            <td><%= survey.created_at.strftime("%Y-%m-%d %H:%M") %></td>
            <%if survey.product !=nil %>
                <td><%= survey.product.capitalize %></td>
            <%else%>
                <td> </td>
            <%end%>
            <td><%= survey.deadline %></td>

          <%end%>
          </tr>
        <%end%>
  
</table>
<div class="center">
    [<%= link_to "Cancel request and return to listing", surveys_path %>] 
</div></br>